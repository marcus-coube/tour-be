generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model partners {
  id              String            @id(map: "partner_pk") @default(uuid())
  name            String            @unique
  logoUrl         String
  partner_address partner_address[] // Relação de um para muitos
  vouchers        vouchers[]
  serviceType     String?           @map("service_type")
  createdAt       DateTime          @default(now()) @map("created_at")
}

model partner_address {
  id           String   @id(map: "address_pk") @default(uuid())
  street       String
  number       String
  neighborhood String
  zipCode      String
  city         String
  state        String
  longitude    Decimal
  latitude     Decimal
  partnerId    String   @map("partner_id")
  partner      partners @relation(fields: [partnerId], references: [id])
  createdAt    DateTime @default(now()) @map("created_at")
}

model vouchers {
  id          String   @id(map: "voucher_pk") @default(uuid())
  title       String
  description String
  // hours    String
  imageUrl    String
  partnerId   String   @map("partner_id")
  partner     partners @relation(fields: [partnerId], references: [id])
  createdAt   DateTime @default(now()) @map("created_at")
}

model users {
  id                   String   @id(map: "user_pk") @default(uuid())
  email                String   @unique(map: "user_email_key")
  name                 String
  document             String
  firebaseId           String   @unique @map("firebase_id")
  method               String
  emailConfirmed       Boolean  @default(false) @map("email_confirmed")
  registrationComplete Boolean  @default(false) @map("registration_complete")
  password             String
  createdAt            DateTime @default(now()) @map("created_at")
}

